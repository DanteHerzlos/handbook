{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "*": ["node_modules/*"],
      // "@styles/*": ["styles/*"],
      // "@assets/*": ["assets/*"],
      // "@services/*": ["services/*"],
      // "@components/*": ["components/*"],
      // "@models/*": ["models/*"],
      // "@hooks/*": ["hooks/*"],
      // "@store/*": ["store/*"],
      // "@lib/*": ["lib/*"],
      // "@utils/*": ["utils/*"],
      // "@handlers/*": ["handlers/*"],
    }
  },
  "include": [
    "global.d.ts", 
    "src/**/*"
  ]
}
